= form_for @computer do |f|
  - if @computer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@computer.errors.count, "error")} prohibited this computer from being saved:"
      %ul
        - @computer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_area :name
  .field
    = f.label :x
    = f.text_field :x
  .field
    = f.label :y
    = f.text_field :y
  .field
    = f.label :ip
    = f.text_field :ip
  .field
    = f.label :mac_address
    = f.text_field :mac_address
  .field
    = f.label :specification
    = f.text_area :specification
  .field
    = f.label :wtable
    = f.text_field :wtable
  .actions
    = f.submit 'Save'
