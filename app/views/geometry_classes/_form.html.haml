= form_for @geometry_class do |f|
  - if @geometry_class.errors.any?
    #error_explanation
      %h2= "#{pluralize(@geometry_class.errors.count, "error")} prohibited this geometry_class from being saved:"
      %ul
        - @geometry_class.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :room
    = f.text_field :room
  .field
    = f.label :bilding
    = f.text_field :bilding
  .field
    = f.label :floor
    = f.number_field :floor
  .field
    = f.label :x
    = f.text_field :x
  .field
    = f.label :y
    = f.text_field :y
  .field
    = f.label :ip
    = f.text_field :ip
  .actions
    = f.submit 'Save'
